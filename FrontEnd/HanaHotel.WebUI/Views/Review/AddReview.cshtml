@model HanaHotel.WebUI.DTOs.ReviewDTO.AddReviewDTO

@{
    ViewData["Title"] = "Thêm đánh giá";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post" asp-action="AddReview" asp-controller="Review">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="RatingStars" class="form-label">Số sao (0 - 5)</label>
        <input asp-for="RatingStars" class="form-control" type="number" step="0.5" min="0" max="5" />
        <span asp-validation-for="RatingStars" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Content" class="form-label">Nội dung đánh giá</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserId" class="form-label">Người đánh giá</label>
        @if (ViewBag.Users != null)
        {
            <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users"></select>
        }
        else
        {
            <input asp-for="UserId" class="form-control" type="number" />
        }
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoomId" class="form-label">Phòng</label>
        @if (ViewBag.Rooms != null)
        {
            <select asp-for="RoomId" class="form-select" asp-items="ViewBag.Rooms"></select>
        }
        else
        {
            <input asp-for="RoomId" class="form-control" type="number" />
        }
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm đánh giá</button>
        <a asp-controller="Review" asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</form>
