@model HanaHotel.WebUI.DTOs.RoomDTO.ResultRoomDTO
@{
    Layout = null;
    var images = Model.ImagePaths ?? new List<string>();
    var carouselId = $"roomCarousel-{Model.Id}";
}

<!DOCTYPE html>
<html lang="vi">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">

        @await Component.InvokeAsync("_SpinnerPartial")
        @await Component.InvokeAsync("_NavbarPartial")
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top" title="Lên đầu trang">
            <i class="bi bi-arrow-up"></i>
        </a>

        <div class="container my-5">
            <div class="card shadow-lg border-0">
                <div class="row no-gutters">
                    <!-- Carousel hình -->
                    <div class="col-md-6">
                        @if (images.Any())
                        {
                            <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (int i = 0; i < images.Count; i++)
                                    {
                                        <button type="button" data-bs-target="#@carouselId" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                                    }
                                </div>
                                <div class="carousel-inner" style="height:400px;">
                                    @for (int i = 0; i < images.Count; i++)
                                    {
                                        var img = images[i];
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="/@Url.Content(img)" class="d-block w-100" alt="@Model.RoomName" style="height:400px; object-fit:cover;">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                            <!-- Thumbnails -->
                            <div class="mt-3 d-flex gap-2 flex-wrap">
                                @for (int i = 0; i < images.Count; i++)
                                {
                                    <img src="/@Url.Content(images[i])" class="thumb img-thumbnail" data-index="@i" style="width:75px; height:56px; object-fit:cover; cursor:pointer;" />
                                }
                            </div>
                        }
                        else
                        {
                            <img src="~/hotel-html-template/img/room-placeholder.jpg" class="d-block w-100" alt="@Model.RoomName" style="height:400px; object-fit:cover;">
                        }
                    </div>

                    <!-- Thông tin phòng -->
                    <div class="col-md-6">
                        <div class="card-body">
                            <h2 class="card-title font-weight-bold mb-3">@Model.RoomName</h2>
                            <h4 class="text-primary mb-3">@Model.Price.ToString("N0") đ <small class="text-muted">mỗi đêm</small></h4>

                            <div class="row mb-3">
                                <div class="col-6"><strong>Số giường:</strong> @Model.BedCount</div>
                                <div class="col-6"><strong>Kích thước:</strong> @Model.Size</div>
                            </div>

                            <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>

                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Room")" class="btn btn-secondary me-2">
                                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Index", "Booking", new { roomId = Model.Id })"><i class="fas fa-calendar-check"></i> Đặt phòng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @await Component.InvokeAsync("_FooterPartial")
    @await Component.InvokeAsync("_ScriptsPartial")

    <script>
        (function () {
            // tạo instance của carousel và gán sự kiện click cho thumbnails
            var carouselEl = document.getElementById('@carouselId');
            if (carouselEl && window.bootstrap) {
                var carousel = bootstrap.Carousel.getOrCreateInstance(carouselEl);

                var thumbs = document.querySelectorAll('#@carouselId .thumb');
                thumbs.forEach(function (t) {
                    t.addEventListener('click', function () {
                        var idx = parseInt(t.getAttribute('data-index'));
                        if (!isNaN(idx)) {
                            carousel.to(idx);
                        }
                    });
                });
            }
        })();
    </script>
</body>
</html>

<style>
    .card-body h2 { color: #343a40; }
    .carousel-inner img { border-radius: 0.25rem; }
    .btn i { margin-right: 5px; }
    .thumb { transition: transform .12s ease-in-out; }
    .thumb:hover { transform: scale(1.05); }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
