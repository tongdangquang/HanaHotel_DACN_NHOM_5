@model List<HanaHotel.WebUI.DTOs.RoomDTO.ResultRoomDTO>
@{
    Layout = null;
    var firstRoom = Model.FirstOrDefault();
}

<!DOCTYPE html>
<html lang="vi">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">

        @await Component.InvokeAsync("_SpinnerPartial")
        @await Component.InvokeAsync("_NavbarPartial")

        <!-- Back to top button -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top" title="Lên đầu trang">
            <i class="bi bi-arrow-up"></i>
        </a>

        <!-- Danh sách phòng -->
        <div class="container py-5">
            <div class="row g-4">
                @foreach (var room in Model)
                {
                    var mainImage = (room.ImagePaths != null && room.ImagePaths.Any())
                        ? room.ImagePaths.First()
                        : "~/Hotel-html-template/img/room-placeholder.jpg";

                    <div class="col-lg-4 col-md-6">
                        <div class="card shadow rounded">
                            <img src="@Url.Content(mainImage)" class="card-img-top" style="cursor:pointer; height:220px; object-fit:cover;"
                                 onclick="location.href='@Url.Action("Detail", "Room", new { id = room.Id })'" />
                            <div class="card-body">
                                <h5 class="card-title">@room.RoomName</h5>
                                <p class="card-text">@room.Description</p>
                                <p>Giường: @room.BedCount</p>
                                <p>Kích thước: @room.Size</p>
                                <p>Giá: @room.Price.ToString("N0") đ/đêm</p>
                                <a href="@Url.Action("Detail", "Room", new { id = room.Id })" class="btn btn-primary">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

    @await Component.InvokeAsync("_FooterPartial")
    @await Component.InvokeAsync("_ScriptsPartial")
</body>
</html>
