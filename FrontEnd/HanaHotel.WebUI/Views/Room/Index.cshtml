        <!-- Danh sách phòng -->
        <div class="container py-5">
            <div class="row g-4">
                @foreach (var room in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card shadow rounded">
                            <img src="~/Hotel-html-template/img/@room.RoomCoverImage" class="card-img-top" style="cursor:pointer;"
                                 onclick="location.href='@Url.Action("Detail", "Room", new { id = room.RoomId })'" />
                            <div class="card-body">
                                <h5 class="card-title">@room.Title</h5>
                                <p class="card-text">@room.Description</p>
                                <p>Giường: @room.BedCount • Phòng tắm: @room.BathCount</p>
