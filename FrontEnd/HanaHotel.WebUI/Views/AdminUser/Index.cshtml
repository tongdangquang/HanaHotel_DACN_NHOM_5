@model List<HanaHotel.EntityLayer.Concrete.User>

@{
    ViewData["Title"] = "Người dùng";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý người dùng</h2>

    <div class="mb-3">
        <a asp-controller="Register" asp-action="Index" class="btn btn-primary">Thêm người dùng mới</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Không có người dùng nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Mã</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Tên đăng nhập</th>
                        <th scope="col">Email</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Ngày sinh</th>
                        <th scope="col">Giới tính</th>
                        <th scope="col">RoleId</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.UserName</td>
                            <td>@(string.IsNullOrWhiteSpace(user.Email) ? "-" : user.Email)</td>
                            <td>@(string.IsNullOrWhiteSpace(user.Phone) ? "-" : user.Phone)</td>
                            <td>@(string.IsNullOrWhiteSpace(user.Address) ? "-" : user.Address)</td>
                            <td>@user.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            <td>@user.Gender.ToString()</td>
                            <td>@user.RoleId</td>
                            <td>
                                <a asp-controller="AdminUser" asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-controller="AdminUser" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này không?');">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


