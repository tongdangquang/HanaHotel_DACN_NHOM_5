@model List<ResultBookingDTO>

@{
    ViewData["Title"] = "Quản lý đặt phòng";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 100%;">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <div>
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Danh sách đặt phòng</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Họ và tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Ngày nhận phòng</th>
                            <th scope="col">Ngày trả phòng</th>
                            <th scope="col">Người lớn</th>
                            <th scope="col">Trẻ em</th>
                            <th scope="col">Phòng</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Yêu cầu đặc biệt</th>
                            <th scope="col" class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BookingId</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.CheckInDate.ToString("dd MMMM yyyy")</td>
                                <td>@item.CheckOutDate.ToString("dd MMMM yyyy")</td>
                                <td>@item.AdultCount</td>
                                <td>@item.ChildCount</td>
                                <td>@item.Room</td>
                                <td>
                                    <span class="badge
                                    @(item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Pending ? "badge-warning" :
                                      item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Confirmed ? "badge-success" :
                                      item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Cancelled ? "badge-danger" :
                                      item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Completed ? "badge-primary" :
                                      "badge-secondary")">
                                        @(
                                            item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Pending ? "Chờ xử lý" :
                                            item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Confirmed ? "Đã xác nhận" :
                                            item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Cancelled ? "Đã hủy" :
                                            item.Status == HanaHotel.EntityLayer.Concrete.BookingStatus.Completed ? "Hoàn thành" :
                                            "Không xác định"
                                            )
                                    </span>
                                </td>
                                <td>@(item.SpecialRequest ?? "Không có")</td>
                                <td class="text-center">
                                    <a href="/AdminBooking/UpdateBooking/@item.BookingId" class="btn btn-warning btn-sm" title="Chỉnh sửa đặt phòng">
                                        <i class="fa fa-pencil"></i> Sửa
                                    </a>
                                    <a href="/AdminBooking/DeleteBooking/@item.BookingId"
                                       class="btn btn-danger btn-sm"
                                       title="Xóa đặt phòng"
                                       onclick="return confirm('Bạn có chắc chắn muốn xóa đặt phòng này không?');">
                                        <i class="fa fa-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
