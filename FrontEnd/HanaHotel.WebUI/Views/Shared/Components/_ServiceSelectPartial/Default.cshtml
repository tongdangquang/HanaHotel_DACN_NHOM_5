@model List<ResultServiceDTO>
@using HanaHotel.WebUI.DTOs.ServiceDTO

@{
    var services = Model ?? new List<ResultServiceDTO>();
    int? selectedId = null;
    if (ViewData["SelectedId"] != null)
    {
        selectedId = Convert.ToInt32(ViewData["SelectedId"]);
    }
}

<select class="form-select" id="selectService" name="ServiceId">
    <option value="">(Không chọn)</option>
    @foreach (var s in services)
    {
        var isSel = selectedId.HasValue && selectedId.Value == s.ServiceId;
        <option value="@s.ServiceId" selected="@(isSel ? "selected" : null)">@s.Title</option>
    }
</select>