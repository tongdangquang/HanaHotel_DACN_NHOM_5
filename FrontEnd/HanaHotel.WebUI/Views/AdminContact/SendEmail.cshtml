@model SendMessageDTO

@{
    ViewData["Title"] = "Gửi Email";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/AdminContact/Inbox">
                        <i class="fa fa-arrow-left" aria-hidden="true" style="margin-right : 5px"></i> Hộp thư đến
                    </a>
                </li>
            </ol>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box">
                            @await Component.InvokeAsync("_ContactSidebarPartial")
                        </div>
                        <div class="email-right-box">
                            <div class="compose-content mt-5">
                                <form asp-action="SendEmail" asp-controller="AdminContact" method="post">
                                    <input type="hidden" asp-for="ContactID" />

                                    <div class="form-group">
                                        <label asp-for="Email">Người nhận:</label>
                                        <input asp-for="Email" class="form-control bg-transparent" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ResponseMessage">Nội dung:</label>
                                        <textarea asp-for="ResponseMessage" class="textarea_editor form-control bg-light" rows="10" placeholder="Nhập nội dung tin nhắn..." required></textarea>
                                        <span asp-validation-for="ResponseMessage" class="text-danger"></span>
                                    </div>
                                    <div class="text-left mt-3">
                                        <button class="btn btn-primary mb-3 mt-2 f-s-14 px-4 me-2" type="submit">
                                            <i class="fa fa-paper-plane me-2"></i> Gửi
                                        </button>
                                        <a href="@Url.Action("Inbox", "AdminContact")" class="btn btn-dark mb-3 mt-2 f-s-14 px-4">
                                            <i class="ti-close me-2 f-s-12"></i> Hủy
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
