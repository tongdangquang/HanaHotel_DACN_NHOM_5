@model List<ResultServiceDTO>

@{
    ViewData["Title"] = "Quản lý dịch vụ";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý dịch vụ</h2>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("AddService", "Service")" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Thêm dịch vụ mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Biểu tượng</th>
                    <th scope="col">Tên dịch vụ</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                        <tr>
                            <td>@service.ServiceId</td>
                            <td class="text-center">
                                <i class="@service.ServiceIcon" style="font-size: 24px;"></i>
                            </td>
                            <td>@service.Title</td>
                            <td>@service.Description</td>
                            <td class="text-center">
                                <a href="@Url.Action("UpdateService", "Service", new { id = service.ServiceId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a href="@Url.Action("DeleteService", "Service", new { id = service.ServiceId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn chắc chắn muốn xóa dịch vụ này?');">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                }else 
                {
                <tr>
                    <td colspan="5" class="text-center text-muted">Không có dịch vụ nào được hiển thị.</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
