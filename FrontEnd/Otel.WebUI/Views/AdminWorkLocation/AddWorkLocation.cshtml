@model CreateWorkLocationDTO

@{
    ViewData["Title"] = "Thêm địa điểm làm việc";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Thêm địa điểm làm việc</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="WorkLocationCityName" class="control-label">Tên thành phố</label>
            <input asp-for="WorkLocationCityName" class="form-control" placeholder="Nhập tên thành phố..." />
            <span asp-validation-for="WorkLocationCityName " class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WorkLocationCountry" class="control-label">Quốc gia</label>
            <input asp-for="WorkLocationCountry" class="form-control" placeholder="Nhập tên quốc gia..." />
            <span asp-validation-for="WorkLocationCountry" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Thêm địa điểm</button>
            <a href="@Url.Action("Index", "AdminWorkLocation")" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </form>
</div>
