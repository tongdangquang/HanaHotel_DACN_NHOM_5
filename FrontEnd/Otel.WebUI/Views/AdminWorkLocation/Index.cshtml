@model List<ResultWorkLocationDTO>

@{
    ViewData["Title"] = "Quản lý địa điểm làm việc";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý địa điểm làm việc</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddWorkLocation", "AdminWorkLocation")" class="btn btn-primary">Thêm địa điểm làm việc</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Mã</th>
                <th scope="col">Thành phố</th>
                <th scope="col">Quốc gia</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workLocation in Model)
            {
                <tr>
                    <td>@workLocation.WorkLocationId</td>
                    <td>@workLocation.WorkLocationCityName</td>
                    <td>@workLocation.WorkLocationCountry</td>
                    <td>
                        <a href="@Url.Action("UpdateWorkLocation", "AdminWorkLocation", new { id = workLocation.WorkLocationId })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteWorkLocation", "AdminWorkLocation", new { id = workLocation.WorkLocationId })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa địa điểm làm việc này không?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
