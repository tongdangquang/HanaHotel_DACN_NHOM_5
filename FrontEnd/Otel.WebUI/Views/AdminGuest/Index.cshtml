@model List<ResultGuestDTO>

@{
    ViewData["Title"] = "Quản lý khách";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý khách</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddGuest", "AdminGuest")" class="btn btn-primary">Khách mới</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Họ và tên đệm</th>
                <th scope="col">Tên</th>
                <th scope="col">Thành phố</th>
                <th scope="col" class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in Model)
            {
                <tr>
                    <td>@guest.GuestId</td>
                    <td>@guest.Name</td>
                    <td>@guest.Surname</td>
                    <td>@guest.City</td>
                    <td class="text-center">
                        <a href="@Url.Action("UpdateGuest", "AdminGuest", new { id = guest.GuestId })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteGuest", "AdminGuest", new { id = guest.GuestId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa khách này không?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
