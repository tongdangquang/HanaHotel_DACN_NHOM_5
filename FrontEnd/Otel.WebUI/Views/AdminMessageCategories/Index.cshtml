@model List<ResultMessageCategoryDTO>

@{
    ViewData["Title"] = "Quản lý danh mục tin nhắn";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý danh mục tin nhắn</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddMessageCategory", "AdminMessageCategories")" class="btn btn-primary">Thêm danh mục mới</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên danh mục</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageCategoryId</td>
                    <td>@item.MessageCategoryName</td>
                    <td>
                        <a href="@Url.Action("UpdateMessageCategory", "AdminMessageCategories", new { id = item.MessageCategoryId })" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                        <a href="@Url.Action("DeleteMessageCategory", "AdminMessageCategories", new { id = item.MessageCategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
