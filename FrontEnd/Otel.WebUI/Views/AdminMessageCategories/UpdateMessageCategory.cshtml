@model UpdateMessageCategoryDTO


@{
    ViewData["Title"] = "Cập nhật danh mục tin nhắn";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="MessageCategoryId" />

    <div class="form-group">
        <label asp-for="MessageCategoryName" class="control-label">Tên danh mục tin nhắn</label>
        <input asp-for="MessageCategoryName" class="form-control" />
        <span asp-validation-for="MessageCategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập nhật danh mục</button>
    </div>
    
</form> 