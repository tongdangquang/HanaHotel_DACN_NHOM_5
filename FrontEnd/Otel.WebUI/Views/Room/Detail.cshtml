@model ResultRoomDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">

        @await Component.InvokeAsync("_SpinnerPartial")
        @await Component.InvokeAsync("_NavbarPartial")
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top" title="Lên đầu trang">
            <i class="bi bi-arrow-up"></i>
        </a>
        <div class="container my-5">
            <div class="card shadow-lg border-0">
                <div class="row no-gutters">
                    <!-- Hình ảnh phòng -->
                    <div class="col-md-6">
                        <div id="roomCarousel" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/hotel-html-template/img/@Model.RoomCoverImage" class="d-block w-100" alt="@Model.Title" style="height:400px; object-fit:cover;">
                                </div>
                                <!-- Nếu có thêm ảnh khác, thêm ở đây -->
                                <!-- <div class="carousel-item">
                                    <img src="~/hotel-html-template/img/room2.jpg" class="d-block w-100" alt="Room Image 2" style="height:400px; object-fit:cover;">
                                </div> -->
                            </div>
                            <a class="carousel-control-prev" href="#roomCarousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Trước</span>
                            </a>
                            <a class="carousel-control-next" href="#roomCarousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Tiếp</span>
                            </a>
                        </div>
                    </div>

                    <!-- Thông tin phòng -->
                    <div class="col-md-6">
                        <div class="card-body">
                            <h2 class="card-title font-weight-bold mb-3">@Model.Title</h2>
                            <h4 class="text-primary mb-3">@Model.Price đ <small class="text-muted">mỗi đêm</small></h4>

                            <div class="row mb-3">
                                <div class="col-6"><strong>Số phòng:</strong> @Model.RoomNumber</div>
                                <div class="col-6"><strong>Số giường:</strong> @Model.BedCount</div>
                                <div class="col-6"><strong>Số phòng tắm:</strong> @Model.BathCount</div>
                                <div class="col-6"><strong>Wifi:</strong> @(Model.Wifi == "true" ? "Có" : "Không")</div>
                            </div>

                            <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>

                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Room")" class="btn btn-secondary mr-2">
                                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Index", "Booking", new { roomId = Model.RoomId })"><i class="fas fa-calendar-check"></i> Đặt phòng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_FooterPartial")
    @await Component.InvokeAsync("_ScriptsPartial")
</body>
</html>
<style>
    .card-body h2 {
        color: #343a40;
    }
    .carousel-inner img {
        border-radius: 0.25rem;
    }
    .btn i {
        margin-right: 5px;
    }
</style>

<!-- Thêm FontAwesome để hiển thị icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
