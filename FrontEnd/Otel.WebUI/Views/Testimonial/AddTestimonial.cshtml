@model AddTestimonialDTO

@{
    ViewData["Title"] = "Thêm đánh giá";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label asp-for="Name" class="control-label">Họ và tên</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Tiêu đề</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Nội dung đánh giá</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Image" class="control-label">Hình ảnh</label>
        <input asp-for="Image" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm đánh giá</button>
    </div>
</form>
