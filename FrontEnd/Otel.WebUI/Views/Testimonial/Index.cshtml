@model List<ResultTestimonialDTO>


@{
    ViewData["Title"] = "Quản lý đánh giá";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="container mt-4">
    <h2 class="text-center mb-4">Quản lý đánh giá</h2>

    <div class="mb-3">
        <a href="@Url.Action("AddTestimonial", "Testimonial")" class="btn btn-primary">Thêm đánh giá mới</a>
    </div>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Họ và tên</th>
                <th scope="col">Tiêu đề</th>
                <th scope="col">Nội dung đánh giá</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var testimonial in Model)
            {
                <tr>
                    <td>@testimonial.TestimonialId</td>
                    <td>@testimonial.Name</td>
                    <td>@testimonial.Title</td>
                    <td>@testimonial.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(testimonial.Image))
                        {
                            <img src="~/hotel-html-template/img/@testimonial.Image" alt="Testimonial Image" style="width: 100px; height: auto;" />
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("UpdateTestimonial", "Testimonial", new { id = testimonial.TestimonialId })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("DeleteTestimonial", "Testimonial", new { id = testimonial.TestimonialId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này không?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
