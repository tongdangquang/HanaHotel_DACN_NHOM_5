@model AddStaffViewModel

@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2 class="text-center mb-4">Thêm nhân viên mới</h2>
<form method="post">
    
    <div class="form-group">
        <label asp-for="Name" class="control-label">Họ và tên</label>
        <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên nhân viên" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Chức vụ</label>
        <input asp-for="Title" class="form-control" placeholder="Nhập chức vụ (Ví dụ: Lễ tân, Quản lý..." />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link1" class="control-label">Liên kết 1 (Facebook)</label>
        <input asp-for="Link1" class="form-control" placeholder="Nhập liên kết mạng xã hội (nếu có)" />
    </div>

    <div class="form-group">
        <label asp-for="Link2" class="control-label">Liên kết 2 (Instagram)</label>
        <input asp-for="Link2" class="form-control" placeholder="Nhập liên kết mạng xã hội (nếu có)" />
    </div>

    <div class="form-group">
        <label asp-for="Link3" class="control-label">Liên kết 3 (LinkedIn)</label>
        <input asp-for="Link3" class="form-control" placeholder="Nhập liên kết mạng xã hội (nếu có)" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
